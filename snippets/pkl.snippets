snippet ame "Amends"
	amends "${1:moduleUri}"

snippet cla "Class"
	class ${1:className} {
	}

snippet ext "Extends"
	extends "${1:moduleUri}"

snippet fun "Function"
	function ${1:functionName}(${2:parameterName}: ${3:parameterType}): ${4:returnType} = $0

snippet fn "Function short"
	function ${1:functionName}(${2:parameters}) = $0

snippet if "if-else"
	if (${1:condition}) $2 else $0

snippet imp "import"
	import "${1:moduleUri}"

snippet -> "lambda"
	(${1:parameters}) -> $0

snippet thr "throw"
	throw \"${1:message}\"
